@page
@model ActorsMovies.Pages.Actors.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Actor.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Actor.ActorsInMovies)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Release Date</th>
                    <th>Genre</th>
                    <th>Rating</th>
                </tr>
                @foreach (var item in Model.Actor.ActorsInMovies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.ReleaseDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Genre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Rating)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Actor.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
